<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="20dip"
    android:paddingLeft="20dip"
    android:paddingTop="20dip" >

    <com.light.widget.RoundImageView
        android:id="@+id/menu_user_info_userface"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/menu_user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_user_info_userface"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_user_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_wite_color"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</RelativeLayout>